<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_account_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green_2"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/add_account_back_btn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add an account"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/login_user"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:hint="Username"
        android:paddingStart="10dp"

        style="@style/loginBox"
        />
    <EditText
        android:id="@+id/login_pass"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"

        style="@style/loginBox"
        />
    <EditText
        android:id="@+id/login_serv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:hint="Server name"
        android:paddingStart="10dp"

        style="@style/loginBox"
        />
    <TextView
        android:id="@+id/regis_image_fpath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Login"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            />
        <Button
            android:id="@+id/regis_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="register"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>