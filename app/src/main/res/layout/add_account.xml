<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_account_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green_2"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/add_account_back_btn"
            android:layout_width="@dimen/backBt"
            android:layout_height="@dimen/prof_img_h"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/plus"
            android:text="@string/add_account_top_text"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>
    <EditText
        android:id="@+id/login_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pfp"
        android:background="@color/white"
        android:hint="@string/add_account_username_field"
        android:textColorHint="@color/black"
        android:paddingStart="@dimen/erText"

        style="@style/loginBox"
        />
    <EditText
        android:id="@+id/login_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pfp"
        android:background="@color/white"
        android:hint="@string/add_account_password_field"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:paddingStart="@dimen/erText"

        style="@style/loginBox"
        />
    <EditText
        android:id="@+id/login_serv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pfp"
        android:background="@color/white"
        android:hint="@string/add_account_servername_field"
        android:textColorHint="@color/black"
        android:paddingStart="@dimen/erText"

        style="@style/loginBox"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/erText"
            android:text="@string/add_account_login_btn"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            />
        <Button
            android:id="@+id/regis_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/erText"
            android:text="@string/add_account_register_btn"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>