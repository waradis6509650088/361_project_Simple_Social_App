<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_post_main"
    android:orientation="vertical"
    android:background="@color/blue_green_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/new_post_back_btn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="New Post"
            />

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/new_post_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/blue_green_3"
        android:hint="Write somthing..."
        android:padding="10dp"
        android:inputType="text|textCapSentences|textMultiLine"
        android:gravity="top|start"
        android:lineSpacingExtra="2dp"
        android:lineSpacingMultiplier="1.2"
        android:maxHeight="100dp"
        android:maxLength="200"
        android:singleLine="false"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:textSize="14sp" />
    <LinearLayout
        android:id="@+id/new_post_attach_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/blue_green_2"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/new_post_attached_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:adjustViewBounds="true"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_post_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circle_plus"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Attach image"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        >
        <Button
            android:id="@+id/new_post_post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>

</LinearLayout>